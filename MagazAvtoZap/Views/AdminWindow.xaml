<Window x:Class="MagazAvtoZap.Views.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Администрирование" Height="500" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <DataGrid x:Name="ProductsDataGrid" AutoGenerateColumns="False" Grid.Row="0" Margin="10" SelectionChanged="ProductsDataGrid_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding ProductID}"/>
                <DataGridTextColumn Header="Название" Binding="{Binding Name}"/>
                <DataGridTextColumn Header="Категория" Binding="{Binding CategoryName}"/>
                <DataGridTextColumn Header="Поставщик" Binding="{Binding Supplier}"/>
                <DataGridTextColumn Header="Цена" Binding="{Binding Price}"/>
                <DataGridTextColumn Header="Остаток" Binding="{Binding StockQuantity}"/>
                <DataGridTemplateColumn Header="Удалить">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Удалить" Click="DeleteProductButton_Click" Tag="{Binding ProductID}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

     
        <GroupBox Header="Редактирование товара" Grid.Row="1" Margin="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <TextBlock Text="Название:" Grid.Row="0" Grid.Column="0" Margin="5" VerticalAlignment="Center"/>
                <TextBox x:Name="NameTextBox" Grid.Row="0" Grid.Column="1" Margin="5" VerticalAlignment="Center"/>

                <TextBlock Text="Категория:" Grid.Row="1" Grid.Column="0" Margin="5" VerticalAlignment="Center"/>
                <ComboBox x:Name="CategoryComboBox" Grid.Row="1" Grid.Column="1" Margin="5" VerticalAlignment="Center"/>

                <TextBlock Text="Поставщик:" Grid.Row="2" Grid.Column="0" Margin="5" VerticalAlignment="Center"/>
                <TextBox x:Name="SupplierTextBox" Grid.Row="2" Grid.Column="1" Margin="5" VerticalAlignment="Center"/>

                <TextBlock Text="Цена:" Grid.Row="3" Grid.Column="0" Margin="5" VerticalAlignment="Center"/>
                <TextBox x:Name="PriceTextBox" Grid.Row="3" Grid.Column="1" Margin="5" VerticalAlignment="Center"/>

                <TextBlock Text="Остаток:" Grid.Row="4" Grid.Column="0" Margin="5" VerticalAlignment="Center"/>
                <TextBox x:Name="StockQuantityTextBox" Grid.Row="4" Grid.Column="1" Margin="5" VerticalAlignment="Center"/>

                <TextBlock Text="Описание:" Grid.Row="5" Grid.Column="0" Margin="5" VerticalAlignment="Center"/>
                <TextBox x:Name="DescriptionTextBox" Grid.Row="5" Grid.Column="1" Margin="5" VerticalAlignment="Center" Height="50" AcceptsReturn="True" TextWrapping="Wrap"/>

                <Button Content="Добавить товар" Grid.Row="6" Grid.Column="0" Margin="5" Padding="10,5" Click="AddProductButton_Click"/>
                <Button Content="Обновить товар" Grid.Row="6" Grid.Column="1" Margin="5" Padding="10,5" Click="UpdateProductButton_Click"/>
            </Grid>
        </GroupBox>
    </Grid>
</Window>
