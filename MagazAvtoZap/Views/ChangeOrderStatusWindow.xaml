<Window x:Class="MagazAvtoZap.Views.ChangeOrderStatusWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Изменение статуса заказа" Height="200" Width="300">

    <StackPanel Margin="10">
        <TextBlock Text="Выберите новый статус:" Margin="5"/>
        <ComboBox x:Name="StatusComboBox" Margin="5">
            <ComboBoxItem Content="Новый"/>
            <ComboBoxItem Content="В обработке"/>
            <ComboBoxItem Content="Отправлен"/>
            <ComboBoxItem Content="Завершен"/>
            <ComboBoxItem Content="Отменен"/>
        </ComboBox>
        <Button Content="Сохранить" Click="SaveButton_Click" HorizontalAlignment="Right" Margin="5"/>
    </StackPanel>
</Window>
