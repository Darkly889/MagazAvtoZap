<Window x:Class="MagazAvtoZap.Views.AddEditProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавление/Редактирование товара" Height="400" Width="500">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="{Binding Title}" FontSize="18" FontWeight="Bold" Grid.Row="0" Margin="10"/>

        <StackPanel Grid.Row="1" Margin="10">
            <TextBlock Text="Название:" Margin="5"/>
            <TextBox x:Name="NameTextBox" Margin="5"/>

            <TextBlock Text="Категория:" Margin="5"/>
            <ComboBox x:Name="CategoryComboBox" Margin="5"/>

            <TextBlock Text="Поставщик:" Margin="5"/>
            <TextBox x:Name="SupplierTextBox" Margin="5"/>

            <TextBlock Text="Цена:" Margin="5"/>
            <TextBox x:Name="PriceTextBox" Margin="5"/>

            <TextBlock Text="Остаток:" Margin="5"/>
            <TextBox x:Name="StockQuantityTextBox" Margin="5"/>

            <TextBlock Text="Описание:" Margin="5"/>
            <TextBox x:Name="DescriptionTextBox" Margin="5" Height="60" TextWrapping="Wrap"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <Button Content="Отмена" Click="CancelButton_Click" Margin="5"/>
            <Button Content="Сохранить" Click="SaveButton_Click" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
