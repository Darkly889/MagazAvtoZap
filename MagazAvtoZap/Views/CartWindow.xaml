<Window x:Class="MagazAvtoZap.Views.CartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Корзина" Height="450" Width="600">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Ваша корзина" FontSize="18" FontWeight="Bold" Grid.Row="0" Margin="10"/>

        <DataGrid x:Name="CartItemsDataGrid" AutoGenerateColumns="False" Grid.Row="1" Margin="10" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Название" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="Количество" Binding="{Binding Quantity}" Width="Auto"/>
                <DataGridTextColumn Header="Цена" Binding="{Binding Price, StringFormat='{}{0:C}'}" Width="Auto"/>
                <DataGridTextColumn Header="Сумма" Binding="{Binding TotalPrice, StringFormat='{}{0:C}'}" Width="Auto"/>
                <DataGridTemplateColumn Header="Удалить" Width="Auto">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Удалить" Click="RemoveFromCartButton_Click" Tag="{Binding}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <TextBlock Text="Итого:" FontWeight="Bold" VerticalAlignment="Center" Margin="5"/>
            <TextBlock x:Name="TotalPriceTextBlock" Text="0 руб." FontWeight="Bold" VerticalAlignment="Center" Margin="5"/>
            <Button Content="Оформить заказ" Click="CheckoutButton_Click" Margin="5" Width="150" Height="30"/>
        </StackPanel>

    </Grid>
</Window>
