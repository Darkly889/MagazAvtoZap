<Window x:Class="MagazAvtoZap.Views.CheckoutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Оформление заказа" Height="500" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Оформление заказа" FontSize="18" FontWeight="Bold" Grid.Row="0" Margin="10"/>

        <StackPanel Grid.Row="1" Margin="10">
            <TextBlock Text="ФИО:" Margin="5"/>
            <TextBox x:Name="FullNameTextBox" Margin="5"/>

            <TextBlock Text="Номер телефона:" Margin="5"/>
            <TextBox x:Name="PhoneTextBox" Margin="5"/>

            <CheckBox x:Name="DeliveryCheckBox" Content="Доставка" Margin="5" Checked="DeliveryCheckBox_Checked" Unchecked="DeliveryCheckBox_Unchecked"/>

            <TextBlock x:Name="AddressLabel" Text="Адрес доставки:" Margin="5" Visibility="Collapsed"/>
            <TextBox x:Name="AddressTextBox" Margin="5" Visibility="Collapsed"/>

            <TextBlock Text="Способ оплаты:" Margin="5"/>
            <ComboBox x:Name="PaymentMethodComboBox" Margin="5">
                <ComboBoxItem Content="Онлайн"/>
                <ComboBoxItem Content="При получении"/>
            </ComboBox>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <Button Content="Отмена" Click="CancelButton_Click" Margin="5"/>
            <Button Content="Оформить заказ" Click="CheckoutButton_Click" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
