<Window x:Class="MagazAvtoZap.Views.CheckoutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Оформление заказа" Height="450" Width="500">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Оформление заказа" FontSize="18" FontWeight="Bold" Grid.Row="0" Margin="10"/>

        <StackPanel Grid.Row="1" Margin="10">
            <TextBlock Text="ФИО:" Margin="5"/>
            <TextBox x:Name="FullNameTextBox" Margin="5"/>

            <TextBlock Text="Телефон:" Margin="5"/>
            <TextBox x:Name="PhoneTextBox" Margin="5"/>

            <TextBlock Text="Способ получения:" Margin="5"/>
            <ComboBox x:Name="DeliveryMethodComboBox" Margin="5">
                <ComboBoxItem Content="Доставка"/>
                <ComboBoxItem Content="Самовывоз"/>
            </ComboBox>

            <TextBlock Text="Адрес доставки:" Margin="5" Visibility="Collapsed" Name="AddressLabel"/>
            <TextBox x:Name="AddressTextBox" Margin="5" Visibility="Collapsed"/>

            <TextBlock Text="Способ оплаты:" Margin="5"/>
            <ComboBox x:Name="PaymentMethodComboBox" Margin="5">
                <ComboBoxItem Content="Наличные"/>
                <ComboBoxItem Content="Карта"/>
            </ComboBox>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <Button Content="Отмена" Click="CancelButton_Click" Margin="5" Width="100"/>
            <Button Content="Оформить" Click="CheckoutButton_Click" Margin="5" Width="100"/>
        </StackPanel>
    </Grid>
</Window>
